<Window x:Class="MakeModFolder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakeModFolder"
        mc:Ignorable="d"
        Title="MakeModFolder" Height="300" Width="350">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="15">
            <Label Content="Mod Name" FontSize="15" Margin="5"/>
            <TextBox Text="{Binding ModName}" FontSize="15" Width="100" VerticalContentAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label Content="Repository Path" FontSize="15" VerticalContentAlignment="Center"/>
            <Button Content="Browse" FontSize="15" Width="70" Height="30" Click="PathBrowse_Button_Click" Margin="5"/>
        </StackPanel>
        <StackPanel>
            <Label Content="{Binding RepositoryPath}" FontSize="15" HorizontalContentAlignment="Center"/>
        </StackPanel>
        <Button Content="Run" Click="Run_Button_Click" FontSize="15" Width="150" Height="25" Margin="15"/>
    </StackPanel>
</Window>
